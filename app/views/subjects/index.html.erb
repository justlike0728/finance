<div class="container-fluid">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">標題</h3>
	  </div>
	  <div class="panel-body">
	    <table class="table table-borered">
	    	<thead>
	    		<tr>
	    			<th>費別</th>
						<th>功能</th>
	    		</tr>
	    	</thead>
	    	<tbody>
					<% @subjects.each do |subject| %>
	    		<tr>
	    			<td><%= subject.title %></td>
	    			<td>
	    				<%= link_to '編輯', edit_subject_path(subject), class: 'btn btn-primary btn-xs' %>
	    				<%= link_to '刪除', subject_path(subject), method: "delete", data: { confirm: '確定要刪除嗎？' } , class: 'btn btn-danger btn-xs' %>
    				</td>
	    		</tr>
					<% end %>
	    	</tbody>
	    </table>
	  </div>
	</div>
</div>